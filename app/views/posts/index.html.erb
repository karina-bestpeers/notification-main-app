<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>
  <%= link_to 'Sign Out', destroy_user_session_path %>
  ||
  <%= link_to 'Notifications', @url %>
<% end %>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
